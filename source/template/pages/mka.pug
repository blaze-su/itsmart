extends ../_template

block variables
  - var title = 'Мероприятия'

block content
  include ../common/_header.pug
  include ../common/_keyvisual.pug

  section.course
    h2.course__title Профессиональное компьютерное образование
    .course__description Только профильные предметы ничего лишнего

    .course__items
      .course__item
        .course__count 21
        .course__label Блоков
      .course__item
        .course__count 3-5
        .course__label Года
      .course__item
        .course__count 18
        .course__label Препрлавателя
      .course__item
        .course__count 2.3к
        .course__label Часов
      .course__item
        .course__count 5
        .course__label Работ в портфолио

  section.benefit
    h2 Преимущества

    .benefit__items
      .benefit__item
        .benefit__picture
        .benefit__label Дети любят компьютеры
        .benefit__description Современных детей уже сложно предаставить без компьютера и телефона, мы поможем развить интерес в полезные компетенции
      .benefit__item
        .benefit__picture
        .benefit__label Профессиональныей пользователь PC
        .benefit__description В формате игры дети осваивают компьютер на уровне профессионала, могут с лекгостью собрать игровой PC, настроить роутер, уверенно пользуются офисными программами
      .benefit__item
        .benefit__picture
        .benefit__label Современые технологии
        .benefit__description В формате игры дети осваивают компьютер на уровне профессионала, могут с лекгостью собрать игровой PC, настроить роутер, уверенно пользуются офисными программами

  section.gallery

    .gallery__items
      - var i = 0;
        while i++ < 4
          .gallery__item
            .gallery__image

  section.programm
    h2 Программа

    .programm__tabs
      .programm__tabsCase
        .programm__tab.programm__tab__active Для детей до 12 лет
        .programm__tab Для детей старше 12 лет

    - var i = 0;
    .programm__items
      while i++ < 3
        .programm__item
          .programm__number= i
            .programm__year Год

          .programm__case
            .programm__header
              .programm__title
                .programm__titleItem • IT Start
                .programm__titleItem • Art студия
                .programm__titleItem • Kodu Game Lab
                .programm__titleItem • LEGO Robotics: Basic

              .programm__price
                span Стоимость месяца
                | 12 000 ₽

            .programm__bottom
              section
                .programm__date
                  i.fa.fa-calendar.programm__icon
                  span
                    | Блажайщий курс:&nbsp;
                    b 9 октября 2017

                .programm__about
                  i.fa.fa-clock-o.programm__icon
                  span
                    b 15&nbsp;
                    | занятий,&nbsp;
                  span
                    b 45&nbsp;
                    | часов,&nbsp;
                  span
                    b 5&nbsp;
                    | преподавателей

              .button.programm__btn Записаться
            .programm__detail
              img(src="/assets/img/svg/arrows/arrows__up.svg")

  include ../common/_registration.pug

  include ../common/_teachers.pug

  include ../common/_reviews.pug

  section.demand
    .demand__case
      h2 Запишись сейчас
      .description Наши менеджеры перезвонять в ближайшее время

      .demand__form
        .demand__detail
          .demand__title Малая компьютерная академия

          .demand__tabs
            .demand__tab.demand__tab__active Курс
            .demand__tab Блок

          .demand__course
            .demand__courseItem
              input.demand__courseRadio(type="radio" name="name" value="name")
              label.demand__courseLabel Рисунок
            .demand__courseItem
              input.demand__courseRadio(type="radio" name="name" value="name")
              label.demand__courseLabel Векторная графика

          .demand__discount 27 000 ₽


        .demand__person
          .demand__title Личные данные

          input.demand__input(type="text" name="name" value="Имя")
          input.demand__input(type="text" name="name" value="Фамилия")
          input.demand__input(type="text" name="name" value="+7 (...) ..-..-...")
          input.demand__input(type="text" name="name" value="E-mail")


          .demand__agreement
            input.demand__agreementCheckbox(type="checkbox" name="name" value="name")
            label Согласен на обработку персональных данных.&nbsp;
              a.demand__agreementLink(href="#") Посмотреть соглашение


      .demand__payment
        .demand__paymentSumm
          span Стоимость блока
          b 20 000 ₽

        .demand__paymentOption
          span Вариант оплаты
          .demand__paymentOptionItems
            .demand__paymentOptionItem.demand__paymentOptionItem__active Online
            .demand__paymentOptionItem Наличные

        .demand__paymentBtn
          button.button.demand__btn Записаться





  include ../common/_contacts.pug

  include ../common/_footer.pug

