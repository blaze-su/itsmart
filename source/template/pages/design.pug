extends ../_template

block variables
  - var title = 'Мероприятия'

block content
  include ../common/_header.pug
  include ../common/_keyvisual.pug

  section.course
    h2.course__title Профессиональное компьютерное образование
    .course__description Только профильные предметы ничего лишнего

    .course__items
      .course__item
        .course__count 5
        .course__label Блоков
      .course__item
        .course__count 2,5
        .course__label Года
      .course__item
        .course__count 3
        .course__label Препрлавателя
      .course__item
        .course__count 800
        .course__label Часов
      .course__item
        .course__count 5
        .course__label Работ в портфолио

  section.programm
    h2 Программа
    .description Вы можете приобрести целиком весь курс и получить скидку в размере 10%. Или купить в рассрочку, оплатив половину до старта, а вторую в середине курса.

    - var i = 0;
    .programm__items
      while i++ < 3
        .programm__item
          .programm__number= i

          .programm__case
            .programm__header
              .programm__title Основы рисунка
                .programm__level(title = "Уровень сложности") Новичок
              .programm__price 12 000 ₽

            .programm__description Вы сможете верстать страницы практически любой сложности. Узнаете, как работать с чужим кодом и правильно публиковать сайты в сети, соберёте портфолио из 2 сайтов и выполните больше 200 учебных заданий.

            .programm__bottom
              section
                .programm__date
                  i.fa.fa-calendar.programm__icon
                  span
                    | Блажайщий курс:&nbsp;
                    b 9 октября 2017

                .programm__about
                  i.fa.fa-clock-o.programm__icon
                  span
                    b 15&nbsp;
                    | занятий,&nbsp;
                  span
                    b 45&nbsp;
                    | часов,&nbsp;
                  span
                    b 5&nbsp;
                    | преподавателей

              .button.programm__btn Подробно
            .programm__detail
              img(src="/assets/img/svg/arrows/arrows__up.svg")

  section.jobInformation
    .jobInformation__case
      h2 Справка о профессии
      .description За время обучения вы получите необходимые навыки и компетенции:

      -
        var jobInformation = [
          "Рисовать от руки",
          "Проектировать и отрисовывать сайты",
          "Работать с 3D объектами",
          "Подготавливать макеты для печати",
          "Обрабатывать фотографии и монтировать видео",
          "Разрабатывать ферменный стиль и брендбук"
        ];

      .jobInformation__items
        each item in jobInformation
          .jobInformation__item
            .jobInformation__image
            .jobInformation__label= item


      .jobInformation__paycheck
        .jobInformation__paycheckItems
          .jobInformation__paycheckItem
            .jobInformation__paycheckCount 300+
            .jobInformation__paycheckLabel Вакансий в год
          .jobInformation__paycheckItem
            .jobInformation__paycheckCount 45 000 Р
            .jobInformation__paycheckLabel Средняя зарплата

        .jobInformation__paycheckSource
          img.jobInformation__paycheckHh(src="/assets/img/hh.png")
          | на освнове данных hh.ru по Краснодару



  include ../common/_teachers.pug

  include ../common/_reviews.pug


  section.studentWorks
    h2 Проекты выпускников


  section.demand
    .demand__case
      h2 Запишись сейчас
      .description Наши менеджеры перезвонять в ближайшее время

      .demand__form
        .demand__detail
          .demand__title ПКО дизайнер

          .demand__tabs
            .demand__tab.demand__tab__active Курс
            .demand__tab Блок

          .demand__course
            .demand__courseItem
              input.demand__courseRadio(type="radio" name="name" value="name")
              label.demand__courseLabel Рисунок
            .demand__courseItem
              input.demand__courseRadio(type="radio" name="name" value="name")
              label.demand__courseLabel Векторная графика

          .demand__discount 27 000 ₽


        .demand__person
          .demand__title Личные данные

          input.demand__input(type="text" name="name" value="Имя")
          input.demand__input(type="text" name="name" value="Фамилия")
          input.demand__input(type="text" name="name" value="+7 (...) ..-..-...")
          input.demand__input(type="text" name="name" value="E-mail")


          .demand__agreement
            input.demand__agreementCheckbox(type="checkbox" name="name" value="name")
            label Согласен на обработку персональных данных.&nbsp;
              a.demand__agreementLink(href="#") Посмотреть соглашение


      .demand__payment
        .demand__paymentSumm
          span Стоимость блока
          b 20 000 ₽

        .demand__paymentOption
          span Вариант оплаты
          .demand__paymentOptionItems
            .demand__paymentOptionItem.demand__paymentOptionItem__active Online
            .demand__paymentOptionItem Наличные

        .demand__paymentBtn
          button.button.demand__btn Записаться




  include ../common/_contacts.pug

  include ../common/_footer.pug

